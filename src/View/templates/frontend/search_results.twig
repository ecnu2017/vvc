{% extends 'base.twig' %}

{% block title %}虚拟宠物医院学习系统 - 病例学习{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" type="text/css" href="/frontend/css/char.css">
{% endblock %}

{% block content %}
<div class="navibar">
  <span class='navi-text'>您搜索的是：{{ search }}</span>
  <div role="button" class='back-text' onclick="window.location.href = '/catalog'">
    <span>返回上一页</span>
  </div>
</div>
<div class='select-bar'>
  <span>搜索结果：</span>
</div>
<div class='operations' id='3d-navi'>
  {% if ills is empty %}
    没有找到相关的病例。
  {% endif %}
  {% for ill in ills %}
  <div role="button" class='chuanran' onclick="window.location.href = '/catalog/{{ill.id}}'">
    <span>{{ ill.name }}</span>
  </div>
  {% endfor %}
  <br>
  {% if page > 1 %}
  <span role="button" onclick="window.location.href = '/catalog/search?q={{search}}&page={{page - 1}}'"><< 上一页 </span>
  {% endif %}
  {% if page < totalPages %}
  <span role="button" onclick="window.location.href = '/catalog/search?q={{search}}&page={{page + 1}}'">下一页 >> </span>
  {% endif %}
</div>
{% endblock %}
